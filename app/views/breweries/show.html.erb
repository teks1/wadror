<p id="notice"><%= notice %></p>

<h2>
  <strong>Name:</strong>
  <%= @brewery.name %>
</h2>

<p>
  <i>Established at </i>
  <%= @brewery.year %>
</p>

<p>
	Number of beers
	<%= @brewery.beers.count %>
</p>

<p>
	<% @brewery.beers.each do |beer| %>
	<%= link_to beer.name, beer %>
	<% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
